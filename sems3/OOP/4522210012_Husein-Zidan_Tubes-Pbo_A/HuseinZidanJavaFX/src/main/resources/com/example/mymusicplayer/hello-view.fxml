<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mymusicplayer.MusicPlayerController"
      style="-fx-background-color: #f0f0f0;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Play" onAction="#playMusic" style="-fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 80;"/>
    <Button text="Pause" onAction="#pauseMusic" style="-fx-font-size: 14; -fx-background-color: #FF9800; -fx-text-fill: white; -fx-pref-width: 80;"/>
    <Button text="Stop" onAction="#stopMusic" style="-fx-font-size: 14; -fx-background-color: #F44336; -fx-text-fill: white; -fx-pref-width: 80;"/>
    <Button text="Next" onAction="#nextMusic" style="-fx-font-size: 14; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-pref-width: 80;"/>
    <Button text="Previous" onAction="#previousMusic" style="-fx-font-size: 14; -fx-background-color: #9C27B0; -fx-text-fill: white; -fx-pref-width: 80;"/>

    <Label fx:id="statusLabel" style="-fx-font-size: 18; -fx-text-fill: #333333;"/>



</VBox>
